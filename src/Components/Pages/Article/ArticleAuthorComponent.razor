@using RealworldBlazorHtmx.App.ServiceClient
@inherits BaseComponent<ArticleAuthorComponent.Input>


@if (Data.Profile.Following)
{
    <button class="btn btn-sm action-btn btn-secondary" hx-delete="/article/followauthor/@Data.Profile.Username" hx-swap="outerHTML">
        <i class="ion-plus-round"></i>
        &nbsp; Unfollow @Data.Profile.Username
    </button>
}
else
{
    <button class="btn btn-sm btn-outline-secondary" hx-post="/article/followauthor/@Data.Profile.Username" hx-swap="outerHTML">
        <i class="ion-plus-round"></i>
        &nbsp; Follow @Data.Profile.Username
    </button>
}


@code {

    public record Input(Profile Profile);

}