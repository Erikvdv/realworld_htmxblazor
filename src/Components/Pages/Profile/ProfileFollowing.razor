@inherits BaseComponent<ProfileFollowing.Model>

@if (Props.Profile.Following)
{
    <button class="btn btn-sm action-btn btn-secondary" hx-delete="/profile/@Props.Profile.Username/follow" hx-swap="outerHTML">
        <i class="ion-plus-round"></i>
        &nbsp; Unfollow @Props.Profile.Username
    </button>
}
else
{
    <button class="btn btn-sm btn-outline-secondary action-btn" hx-post="/profile/@Props.Profile.Username/follow" hx-swap="outerHTML">
        <i class="ion-plus-round"></i>
        &nbsp; Follow @Props.Profile.Username
    </button>
}

@code {
    public record Model(ServiceClient.Profile Profile) : BaseComponentProps;
}