@inherits BaseComponent<ProfileFollowingComponent.Input>

@if (Data.Profile.Following)
{
    <button class="btn btn-sm action-btn btn-secondary" hx-delete="/profile/@Data.Profile.Username/follow" hx-swap="outerHTML">
        <i class="ion-plus-round"></i>
        &nbsp; Unfollow @Data.Profile.Username
    </button>
}
else
{
    <button class="btn btn-sm btn-outline-secondary action-btn" hx-post="/profile/@Data.Profile.Username/follow" hx-swap="outerHTML">
        <i class="ion-plus-round"></i>
        &nbsp; Follow @Data.Profile.Username
    </button>
}

@code {
    public record Input(ServiceClient.Profile Profile);
}